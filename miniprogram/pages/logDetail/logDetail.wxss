body{
  font-family: Arial, Helvetica, sans-serif;
  margin: 1.5em;
  word-break: break-all;
   
}
.container{
  padding: 0 1.5em;
}
.swiperContainer{
  margin-bottom: 0.5em;
  border-radius: 0.5em;
  overflow: hidden;
  transform: translateY(0);
  box-shadow: 0 0 10px grey;
  justify-content: center;
  align-items: center;
  display: flex;
}

swiper{
  width: 750rpx;
  height: 500rpx;
  justify-content: center;
  align-items: center;
}
.imageHolder{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
swiper image{
  width:100%;
}

.medium{
  font-weight: bolder;
}
.title{
  font-size: 45rpx;
  margin-bottom: 1em;
}
.small{
  margin-top: 1em;
  font-size: 30rpx;
  line-height: 2em;
}
.top{
  display: flex;
  font-size: 35rpx;
  margin: 1.5em 0 1em 0;
  text-align: center; 
}
.status{
  margin-left: auto;
  margin-right: 0;
  float: right;
}
.large{
  margin: 0.5em; 
  font-size: 35rpx;
  background-color: var(--themeColor);
  color:white;
  border-radius: 2em;
  text-align: center; 
  line-height: 2em;
}
